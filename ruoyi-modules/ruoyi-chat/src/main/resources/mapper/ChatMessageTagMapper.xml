<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ruoyi.chat.mapper.ChatMessageTagMapper">

    <resultMap type="org.ruoyi.chat.domain.ChatMessageTag" id="ChatMessageTagResult">
        <result property="tagId" column="tag_id"/>
        <result property="tagName" column="tag_name"/>
        <result property="tagColor" column="tag_color"/>
        <result property="userId" column="user_id"/>
        <result property="useCount" column="use_count"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 查询标签列表 -->
    <select id="selectChatMessageTagList" parameterType="org.ruoyi.chat.domain.ChatMessageTag" resultMap="ChatMessageTagResult">
        select tag_id, tag_name, tag_color, user_id, use_count, create_time, update_time
        from chat_message_tag
        where 1 = 1
        <if test="tagName != null and tagName != ''">
            and tag_name like concat('%', #{tagName}, '%')
        </if>
        <if test="userId != null">
            and user_id = #{userId}
        </if>
        order by use_count desc, create_time desc
    </select>

    <!-- 查询标签列表（按用户ID） -->
    <select id="selectChatMessageTagListByUserId" parameterType="Long" resultMap="ChatMessageTagResult">
        select tag_id, tag_name, tag_color, user_id, use_count, create_time, update_time
        from chat_message_tag
        where user_id = #{userId}
        order by use_count desc, create_time desc
    </select>

    <!-- 查询标签（按名称和用户ID） -->
    <select id="selectChatMessageTagByNameAndUserId" parameterType="org.ruoyi.chat.domain.ChatMessageTag" resultMap="ChatMessageTagResult">
        select tag_id, tag_name, tag_color, user_id, use_count, create_time, update_time
        from chat_message_tag
        where tag_name = #{tagName} and user_id = #{userId}
    </select>

    <!-- 查询标签（按ID） -->
    <select id="selectChatMessageTagById" parameterType="Long" resultMap="ChatMessageTagResult">
        select tag_id, tag_name, tag_color, user_id, use_count, create_time, update_time
        from chat_message_tag
        where tag_id = #{tagId}
    </select>

    <!-- 新增标签 -->
    <insert id="insertChatMessageTag" parameterType="org.ruoyi.chat.domain.ChatMessageTag">
        insert into chat_message_tag
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="tagName != null and tagName != ''">tag_name,</if>
            <if test="tagColor != null and tagColor != ''">tag_color,</if>
            <if test="userId != null">user_id,</if>
            <if test="useCount != null">use_count,</if>
            create_time,
            update_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="tagName != null and tagName != ''">#{tagName},</if>
            <if test="tagColor != null and tagColor != ''">#{tagColor},</if>
            <if test="userId != null">#{userId},</if>
            <if test="useCount != null">#{useCount},</if>
            now(),
            now()
        </trim>
    </insert>

    <!-- 修改标签 -->
    <update id="updateChatMessageTag" parameterType="org.ruoyi.chat.domain.ChatMessageTag">
        update chat_message_tag
        <trim prefix="set" suffixOverrides=",">
            <if test="tagName != null and tagName != ''">tag_name = #{tagName},</if>
            <if test="tagColor != null and tagColor != ''">tag_color = #{tagColor},</if>
            <if test="useCount != null">use_count = #{useCount},</if>
            update_time = now()
        </trim>
        where tag_id = #{tagId}
    </update>

    <!-- 增减标签使用次数 -->
    <update id="updateChatMessageTagUseCount" parameterType="map">
        update chat_message_tag
        set use_count = use_count + #{delta}
        where tag_id = #{tagId}
    </update>

    <!-- 删除标签 -->
    <delete id="deleteChatMessageTagById" parameterType="Long">
        delete from chat_message_tag
        where tag_id = #{tagId}
    </delete>

    <!-- 批量删除标签 -->
    <delete id="deleteChatMessageTagByIds" parameterType="String">
        delete from chat_message_tag
        where tag_id in
        <foreach item="tagId" collection="array" open="(" separator="," close=")">
            #{tagId}
        </foreach>
    </delete>

</mapper>